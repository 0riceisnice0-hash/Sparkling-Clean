---
import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/Hero.astro';
import CTASection from '../../components/CTASection.astro';
import Icon from '../../components/Icon.astro';
import { areas } from '../../data/areas';
---

<Layout 
  title="Areas We Cover"
  description="Professional oven cleaning from Lymington to Poole. We cover Christchurch, Bournemouth, New Milton, Ringwood, Ferndown, Wimborne and surrounding areas."
  canonicalUrl="/areas/"
>
  <Hero 
    headline="Areas We Cover"
    subheadline="Professional oven cleaning across Dorset. From Lymington to Poole and everywhere in between."
    compact
  />
  
  <section class="section">
    <div class="container">
      <div class="areas-intro">
        <p>Based in Christchurch, we provide professional oven cleaning services across a wide area of Dorset and the New Forest. Whether you're in a busy town or a quiet village, we can help.</p>
      </div>
      
      <div class="areas-grid">
        {areas.map(area => (
          <a href={`/Sparkling-Clean/areas/${area.slug}/`} class="area-card card">
            <div class="area-icon">
              <Icon name="location" size={24} />
            </div>
            <div class="area-content">
              <h3>{area.name}</h3>
              <p>{area.description.substring(0, 100)}...</p>
            </div>
            <span class="area-arrow">
              <Icon name="arrow" size={16} />
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <section class="section bg-elevated">
    <div class="container">
      <div class="content-block text-center">
        <h2>Not Listed?</h2>
        <div class="accent-line"></div>
        <p>Don't see your area? We may still be able to help. We're happy to travel to locations outside our core coverage area for larger jobs or multiple appliances.</p>
        <p>Give us a call to discuss your requirements.</p>
        <a href="/Sparkling-Clean/contact/" class="btn btn-primary">Get In Touch</a>
      </div>
    </div>
  </section>
  
  <section class="section">
    <div class="container">
      <div class="map-placeholder">
        <div class="placeholder-image" style="aspect-ratio: 16/9; border-radius: var(--radius-lg);">
          <span>Map showing service area</span>
        </div>
        <p class="map-note">Map placeholder - shows coverage from Lymington to Poole</p>
      </div>
    </div>
  </section>
  
  <CTASection />
</Layout>

<style>
  .areas-intro {
    max-width: 700px;
    margin: 0 auto var(--space-2xl);
    text-align: center;
  }
  
  .areas-intro p {
    font-size: 1.125rem;
  }
  
  .areas-grid {
    display: grid;
    gap: var(--space-md);
  }
  
  @media (min-width: 640px) {
    .areas-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .areas-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .area-card {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    text-decoration: none;
    transition: all var(--transition-normal);
  }
  
  .area-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-gold);
  }
  
  .area-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(212, 175, 55, 0.15), transparent);
    border-radius: var(--radius-md);
    color: var(--color-gold);
    flex-shrink: 0;
  }
  
  .area-content {
    flex-grow: 1;
    min-width: 0;
  }
  
  .area-content h3 {
    font-size: 1.125rem;
    color: var(--color-text);
    margin-bottom: var(--space-xs);
  }
  
  .area-content p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .area-arrow {
    color: var(--color-gold);
    flex-shrink: 0;
    transition: transform var(--transition-fast);
  }
  
  .area-card:hover .area-arrow {
    transform: translateX(4px);
  }
  
  .content-block {
    max-width: 600px;
    margin: 0 auto;
  }
  
  .content-block h2 {
    margin-bottom: var(--space-sm);
  }
  
  .map-placeholder {
    text-align: center;
  }
  
  .map-note {
    font-size: 0.875rem;
    color: var(--color-text-subtle);
    margin-top: var(--space-sm);
  }
</style>
