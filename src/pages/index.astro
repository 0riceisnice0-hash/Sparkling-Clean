---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import BeforeAfter from '../components/BeforeAfter.astro';
import ServiceCard from '../components/ServiceCard.astro';
import PriceCard from '../components/PriceCard.astro';
import ReviewCard from '../components/ReviewCard.astro';
import CTASection from '../components/CTASection.astro';
import Icon from '../components/Icon.astro';
import { business } from '../data/business';
import { featuredServices } from '../data/services';
import { prices, popularPrices, pricingNote } from '../data/prices';
import { reviews } from '../data/reviews';
import { primaryAreas } from '../data/areas';

const howItWorks = [
  {
    step: '1',
    title: 'Book Your Clean',
    description: 'Call Aaron or book online. We\'ll confirm a convenient time that works for you.',
  },
  {
    step: '2',
    title: 'We Arrive & Clean',
    description: 'Our expert arrives, sets up, and transforms your oven using safe, professional methods.',
  },
  {
    step: '3',
    title: 'Sparkling Results',
    description: 'Your oven looks brand new. No mess, no fuss, just sparkling clean results.',
  },
];

const whyChooseUs = [
  'Safe, non-caustic cleaning products – no harsh fumes',
  'All removable parts properly cleaned',
  'Respectful in your home – we clean up after ourselves',
  'Clear, honest pricing with no hidden fees',
  'Fast response from a local, reliable service',
  'Perfect for moving house, landlords, and family homes',
];
---

<Layout 
  title="Professional Oven Cleaning in Dorset"
  description="Expert oven cleaning across Dorset. From Lymington to Poole, we make ovens sparkle. Safe, non-caustic products. Book today!"
>
  <!-- Hero Section -->
  <Hero 
    headline="Professional Oven Cleaning That Makes It Look Brand New"
    subheadline="Expert oven cleaning across Dorset. Safe, thorough, and hassle-free."
  />
  
  <!-- Before/After Section -->
  <section class="section bg-elevated">
    <div class="container">
      <div class="section-header">
        <h2>See the Difference</h2>
        <div class="accent-line"></div>
        <p>Slide to compare before and after our professional oven cleaning service.</p>
      </div>
      <BeforeAfter />
    </div>
  </section>
  
  <!-- Services Grid -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <h2>Our Services</h2>
        <div class="accent-line"></div>
        <p>Professional cleaning for all your kitchen appliances.</p>
      </div>
      <div class="grid grid-4">
        {featuredServices.map(service => (
          <ServiceCard 
            title={service.title}
            description={service.shortDescription}
            icon={service.icon}
            href={`/Sparkling-Clean/services/${service.slug}/`}
          />
        ))}
      </div>
      <div class="text-center mt-xl">
        <a href="/Sparkling-Clean/services/" class="btn btn-secondary">View All Services</a>
      </div>
    </div>
  </section>
  
  <!-- Pricing Teaser -->
  <section class="section bg-elevated">
    <div class="container">
      <div class="section-header">
        <h2>Clear, Honest Pricing</h2>
        <div class="accent-line"></div>
        <p>No hidden fees. Just straightforward prices for quality work.</p>
      </div>
      <div class="pricing-teaser">
        <div class="price-grid">
          {popularPrices.map(item => (
            <div class="price-teaser-item">
              <span class="price-teaser-name">{item.name}</span>
              <span class="price-teaser-value">{item.price}</span>
            </div>
          ))}
        </div>
        <p class="pricing-note">{pricingNote}</p>
        <a href="/Sparkling-Clean/prices/" class="btn btn-primary">View Full Price List</a>
      </div>
    </div>
  </section>
  
  <!-- How It Works -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <h2>How It Works</h2>
        <div class="accent-line"></div>
        <p>Getting your oven professionally cleaned is easy.</p>
      </div>
      <div class="steps-grid">
        {howItWorks.map(item => (
          <div class="step-card">
            <div class="step-number">{item.step}</div>
            <h3 class="step-title">{item.title}</h3>
            <p class="step-description">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Why Choose Us -->
  <section class="section bg-elevated">
    <div class="container">
      <div class="why-choose-grid">
        <div class="why-choose-content">
          <h2>Why Choose Sparkling Clean?</h2>
          <div class="accent-line" style="margin-left: 0;"></div>
          <ul class="why-choose-list">
            {whyChooseUs.map(item => (
              <li>
                <Icon name="check" size={20} />
                <span>{item}</span>
              </li>
            ))}
          </ul>
          <a href="/Sparkling-Clean/about/" class="btn btn-outline-gold">Learn More About Us</a>
        </div>
        <div class="why-choose-image">
          <div class="placeholder-image" style="aspect-ratio: 1; border-radius: var(--radius-lg);">
            <Icon name="sparkle" size={64} />
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Reviews -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <h2>What Our Customers Say</h2>
        <div class="accent-line"></div>
        <p>Don't just take our word for it. Here's what our customers think.</p>
      </div>
      <div class="grid grid-3">
        {reviews.slice(0, 3).map(review => (
          <ReviewCard review={review} />
        ))}
      </div>
      <div class="text-center mt-xl">
        <a href="/Sparkling-Clean/reviews/" class="btn btn-secondary">See All Reviews</a>
      </div>
    </div>
  </section>
  
  <!-- Area Coverage -->
  <section class="section bg-elevated">
    <div class="container">
      <div class="section-header">
        <h2>Areas We Cover</h2>
        <div class="accent-line"></div>
        <p>Professional oven cleaning from Lymington to Poole and everywhere in between.</p>
      </div>
      <div class="areas-grid">
        {primaryAreas.map(area => (
          <a href={`/Sparkling-Clean/areas/${area.slug}/`} class="area-link">
            <Icon name="location" size={16} />
            {area.name}
          </a>
        ))}
      </div>
      <div class="text-center mt-lg">
        <a href="/Sparkling-Clean/areas/" class="btn btn-secondary">View All Areas</a>
      </div>
    </div>
  </section>
  
  <!-- Final CTA -->
  <CTASection 
    headline="Ready for a Sparkling Clean Oven?"
    subheadline="Book your professional oven cleaning today. Fast, friendly service across Dorset."
  />
</Layout>

<style>
  /* Pricing Teaser */
  .pricing-teaser {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }
  
  .price-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-md);
    margin-bottom: var(--space-lg);
  }
  
  @media (min-width: 640px) {
    .price-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  .price-teaser-item {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border-gold);
    border-radius: var(--radius-md);
    padding: var(--space-md);
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }
  
  .price-teaser-name {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }
  
  .price-teaser-value {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-gold);
  }
  
  .pricing-note {
    font-size: 0.875rem;
    color: var(--color-text-subtle);
    margin-bottom: var(--space-lg);
  }
  
  /* Steps */
  .steps-grid {
    display: grid;
    gap: var(--space-lg);
  }
  
  @media (min-width: 768px) {
    .steps-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .step-card {
    text-align: center;
    padding: var(--space-lg);
  }
  
  .step-number {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto var(--space-md);
    background: linear-gradient(135deg, var(--color-gold-dark), var(--color-gold));
    color: var(--color-bg);
    font-size: 1.5rem;
    font-weight: 700;
    border-radius: 50%;
  }
  
  .step-title {
    font-size: 1.25rem;
    margin-bottom: var(--space-sm);
    color: var(--color-text);
  }
  
  .step-description {
    color: var(--color-text-muted);
    margin: 0;
  }
  
  /* Why Choose Us */
  .why-choose-grid {
    display: grid;
    gap: var(--space-2xl);
    align-items: center;
  }
  
  @media (min-width: 768px) {
    .why-choose-grid {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  .why-choose-content h2 {
    margin-bottom: var(--space-sm);
  }
  
  .why-choose-list {
    list-style: none;
    margin: var(--space-lg) 0;
  }
  
  .why-choose-list li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
    margin-bottom: var(--space-sm);
    color: var(--color-text-muted);
  }
  
  .why-choose-list li :global(svg) {
    color: var(--color-gold);
    flex-shrink: 0;
    margin-top: 2px;
  }
  
  .why-choose-image {
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .why-choose-image .placeholder-image {
    width: 100%;
    max-width: 400px;
    color: var(--color-gold);
  }
  
  /* Areas Grid */
  .areas-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    justify-content: center;
  }
  
  .area-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    padding: var(--space-xs) var(--space-md);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    text-decoration: none;
    transition: all var(--transition-fast);
  }
  
  .area-link:hover {
    border-color: var(--color-gold);
    color: var(--color-gold);
  }
  
  .area-link :global(svg) {
    color: var(--color-gold);
  }
</style>
