---
import { business } from '../data/business';

export interface Props {
  headline?: string;
  subheadline?: string;
  style?: 'default' | 'subtle';
}

const {
  headline = 'Ready for a Sparkling Clean Oven?',
  subheadline = 'Book your professional oven cleaning today. Fast, friendly service across Dorset.',
  style = 'default',
} = Astro.props;
---

<section class:list={['cta-section', `cta-${style}`]}>
  <div class="container">
    <div class="cta-content">
      <h2 class="cta-headline">{headline}</h2>
      <p class="cta-subheadline">{subheadline}</p>
      <div class="cta-buttons">
        <a href={`tel:${business.phone}`} class="btn btn-primary btn-lg">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
          </svg>
          Call Aaron Now
        </a>
        <a href="/Sparkling-Clean/contact/" class="btn btn-outline-gold btn-lg">
          Book Online
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .cta-section {
    padding: var(--space-3xl) 0;
  }
  
  .cta-default {
    background: 
      radial-gradient(ellipse at 50% 50%, rgba(212, 175, 55, 0.1) 0%, transparent 70%),
      var(--color-bg-elevated);
  }
  
  .cta-subtle {
    background: var(--color-bg);
    border-top: 1px solid var(--color-border);
    border-bottom: 1px solid var(--color-border);
  }
  
  .cta-content {
    max-width: 700px;
    margin: 0 auto;
    text-align: center;
  }
  
  .cta-headline {
    font-size: clamp(1.5rem, 4vw, 2.5rem);
    margin-bottom: var(--space-sm);
    color: var(--color-text);
  }
  
  .cta-subheadline {
    font-size: 1.125rem;
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
  }
  
  .cta-buttons {
    display: flex;
    gap: var(--space-sm);
    justify-content: center;
    flex-wrap: wrap;
  }
</style>
