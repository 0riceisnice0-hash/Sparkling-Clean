---
import { business } from '../data/business';
import { services } from '../data/services';
import { areas } from '../data/areas';

const currentYear = new Date().getFullYear();

const quickLinks = [
  { label: 'Home', href: '/Sparkling-Clean/' },
  { label: 'Services', href: '/Sparkling-Clean/services/' },
  { label: 'Prices', href: '/Sparkling-Clean/prices/' },
  { label: 'About', href: '/Sparkling-Clean/about/' },
  { label: 'Contact', href: '/Sparkling-Clean/contact/' },
];

const legalLinks = [
  { label: 'Privacy Policy', href: '/Sparkling-Clean/privacy/' },
  { label: 'Terms & Conditions', href: '/Sparkling-Clean/terms/' },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-top">
      <div class="footer-brand">
        <div class="footer-logo">
          <span class="logo-icon">âœ¨</span>
          <span class="logo-text">
            <span class="logo-main">Sparkling Clean</span>
            <span class="logo-sub">Oven Cleaning</span>
          </span>
        </div>
        <p class="footer-desc">
          Professional oven cleaning services across Dorset. From Lymington to Poole, we make ovens sparkle.
        </p>
        <div class="footer-contact">
          <a href={`tel:${business.phone}`} class="contact-link">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
            {business.phoneFormatted}
          </a>
          <a href={`mailto:${business.email}`} class="contact-link">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="4" width="20" height="16" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
            {business.email}
          </a>
        </div>
      </div>
      
      <div class="footer-links">
        <div class="footer-col">
          <h4>Quick Links</h4>
          <ul>
            {quickLinks.map(link => (
              <li><a href={link.href}>{link.label}</a></li>
            ))}
          </ul>
        </div>
        
        <div class="footer-col">
          <h4>Our Services</h4>
          <ul>
            {services.slice(0, 6).map(service => (
              <li><a href={`/Sparkling-Clean/services/${service.slug}/`}>{service.title}</a></li>
            ))}
          </ul>
        </div>
        
        <div class="footer-col">
          <h4>Areas We Cover</h4>
          <ul>
            {areas.slice(0, 6).map(area => (
              <li><a href={`/Sparkling-Clean/areas/${area.slug}/`}>{area.name}</a></li>
            ))}
          </ul>
        </div>
      </div>
    </div>
    
    <div class="footer-cta">
      <p>Ready for a sparkling clean oven?</p>
      <div class="footer-cta-buttons">
        <a href={`tel:${business.phone}`} class="btn btn-primary">
          Call Aaron Now
        </a>
        <a href="/Sparkling-Clean/contact/" class="btn btn-outline-gold">
          Book Online
        </a>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} {business.name}. All rights reserved.</p>
      <ul class="legal-links">
        {legalLinks.map(link => (
          <li><a href={link.href}>{link.label}</a></li>
        ))}
      </ul>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-bg-elevated);
    border-top: 1px solid var(--color-border);
    padding-top: var(--space-3xl);
  }
  
  .footer-top {
    display: grid;
    gap: var(--space-2xl);
    margin-bottom: var(--space-2xl);
  }
  
  @media (min-width: 768px) {
    .footer-top {
      grid-template-columns: 1fr 2fr;
    }
  }
  
  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }
  
  .logo-icon {
    font-size: 1.5rem;
  }
  
  .logo-text {
    display: flex;
    flex-direction: column;
    line-height: 1.2;
  }
  
  .logo-main {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-gold);
  }
  
  .logo-sub {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .footer-desc {
    color: var(--color-text-muted);
    font-size: 0.9375rem;
    margin-bottom: var(--space-md);
    max-width: 300px;
  }
  
  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }
  
  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text);
    font-size: 0.9375rem;
    transition: color var(--transition-fast);
  }
  
  .contact-link:hover {
    color: var(--color-gold);
  }
  
  .contact-link svg {
    color: var(--color-gold);
  }
  
  .footer-links {
    display: grid;
    gap: var(--space-xl);
  }
  
  @media (min-width: 640px) {
    .footer-links {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .footer-col h4 {
    color: var(--color-text);
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: var(--space-md);
    letter-spacing: 0.02em;
  }
  
  .footer-col ul {
    list-style: none;
  }
  
  .footer-col li {
    margin-bottom: var(--space-xs);
  }
  
  .footer-col a {
    color: var(--color-text-muted);
    font-size: 0.875rem;
    transition: color var(--transition-fast);
  }
  
  .footer-col a:hover {
    color: var(--color-gold);
  }
  
  .footer-cta {
    background: linear-gradient(135deg, rgba(212, 175, 55, 0.1), transparent);
    border: 1px solid var(--color-border-gold);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
    text-align: center;
    margin-bottom: var(--space-2xl);
  }
  
  .footer-cta p {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-text);
    margin-bottom: var(--space-md);
  }
  
  .footer-cta-buttons {
    display: flex;
    gap: var(--space-sm);
    justify-content: center;
    flex-wrap: wrap;
  }
  
  .footer-bottom {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-lg) 0;
    border-top: 1px solid var(--color-border);
    text-align: center;
  }
  
  @media (min-width: 640px) {
    .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }
  
  .footer-bottom p {
    color: var(--color-text-subtle);
    font-size: 0.875rem;
    margin: 0;
  }
  
  .legal-links {
    display: flex;
    gap: var(--space-md);
    list-style: none;
  }
  
  .legal-links a {
    color: var(--color-text-subtle);
    font-size: 0.875rem;
  }
  
  .legal-links a:hover {
    color: var(--color-gold);
  }
</style>
