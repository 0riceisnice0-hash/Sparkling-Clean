---
// Before/After slider component with placeholder images
---

<div class="before-after">
  <div class="slider-container">
    <div class="image-wrapper">
      <div class="image before-image">
        <div class="placeholder-image">
          <span>Before</span>
        </div>
        <span class="image-label">Before</span>
      </div>
      <div class="image after-image" id="afterImage">
        <div class="placeholder-image placeholder-after">
          <span>After</span>
        </div>
        <span class="image-label">After</span>
      </div>
    </div>
    <input 
      type="range" 
      min="0" 
      max="100" 
      value="50" 
      class="slider" 
      id="beforeAfterSlider"
      aria-label="Slide to compare before and after images"
    />
    <div class="slider-handle" id="sliderHandle">
      <div class="handle-line"></div>
      <div class="handle-circle">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15 18 9 12 15 6"/>
          <polyline points="9 18 15 12 9 6" transform="translate(6, 0)"/>
        </svg>
      </div>
      <div class="handle-line"></div>
    </div>
  </div>
</div>

<style>
  .before-after {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .slider-container {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    border-radius: var(--radius-lg);
    border: 1px solid var(--color-border-gold);
    box-shadow: var(--shadow-gold);
  }
  
  .image-wrapper {
    position: absolute;
    inset: 0;
  }
  
  .image {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }
  
  .placeholder-image {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text-subtle);
    background: linear-gradient(135deg, #1a1a1a 0%, #2a2a2a 100%);
  }
  
  .placeholder-after {
    background: linear-gradient(135deg, #2a2a2a 0%, #3a3a3a 100%);
    color: var(--color-gold);
  }
  
  .before-image {
    z-index: 1;
  }
  
  .after-image {
    z-index: 2;
    clip-path: inset(0 0 0 50%);
  }
  
  .image-label {
    position: absolute;
    bottom: var(--space-md);
    padding: var(--space-xs) var(--space-sm);
    background: rgba(0, 0, 0, 0.7);
    color: var(--color-text);
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: var(--radius-sm);
  }
  
  .before-image .image-label {
    left: var(--space-md);
  }
  
  .after-image .image-label {
    right: var(--space-md);
  }
  
  .slider {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    margin: 0;
    opacity: 0;
    cursor: col-resize;
    z-index: 4;
  }
  
  .slider-handle {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 50%;
    width: 4px;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 3;
    pointer-events: none;
  }
  
  .handle-line {
    flex: 1;
    width: 2px;
    background: var(--color-gold);
  }
  
  .handle-circle {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-gold);
    color: var(--color-bg);
    border-radius: 50%;
    box-shadow: var(--shadow-md);
  }
</style>

<script>
  const slider = document.getElementById('beforeAfterSlider') as HTMLInputElement;
  const afterImage = document.getElementById('afterImage');
  const handle = document.getElementById('sliderHandle');
  
  if (slider && afterImage && handle) {
    slider.addEventListener('input', (e) => {
      const value = (e.target as HTMLInputElement).value;
      afterImage.style.clipPath = `inset(0 0 0 ${value}%)`;
      handle.style.left = `${value}%`;
    });
  }
</script>
